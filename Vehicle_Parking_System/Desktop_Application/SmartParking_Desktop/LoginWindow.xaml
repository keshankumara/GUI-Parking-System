<Window x:Class="SmartParking_Desktop.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartParking_Desktop"
        mc:Ignorable="d"
        Title="Login - ParkEase" 
        Height="500" 
        Width="435"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="White">

    <Grid>
        <!-- Main Grid Layout -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Login Form -->
            <RowDefinition Height="Auto"/>
            <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- Login Form Section -->
        <StackPanel Grid.Row="1" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center"
                    Width="300">
            <!-- Login Title -->
            <TextBlock Text="Login"
                       FontSize="24"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- Username Field -->
            <TextBlock Text="Username"
                       FontSize="14"
                       Margin="5,0,5,5"/>
            <TextBox x:Name="UsernameTextBox"
                     FontSize="14"
                     Padding="5"
                     Margin="5,0,5,10"/>

            <!-- Password Field -->
            <TextBlock Text="Password"
                       FontSize="14"
                       Margin="5,0,5,5"/>
            <PasswordBox x:Name="PasswordBox"
                         FontSize="14"
                         Padding="5"
                         Margin="5,0,5,20"/>

            <!-- Login Button -->
            <Button x:Name="LoginButton"
                    Content="Login"
                    FontSize="16"
                    FontWeight="Bold"
                    Background="Blue"
                    Foreground="White"
                    Padding="10,5"
                    HorizontalAlignment="Stretch"
                    Margin="5,0,5,10"
                    Click="LoginButton_Click"/>
            <!-- Added Click event handler -->

            <!-- Registration Link -->
            <TextBlock Text="Don't have an account? Register here."
                       FontSize="12"
                       Foreground="Blue"
                       HorizontalAlignment="Center"
                       Margin="5">
                <TextBlock.InputBindings>
                    <!-- Add MouseBinding here if needed -->
                </TextBlock.InputBindings>
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>