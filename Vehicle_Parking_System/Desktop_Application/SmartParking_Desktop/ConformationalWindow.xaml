<Window x:Class="SmartParking_Desktop.ConformationalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartParking_Desktop"
        mc:Ignorable="d"
        Title="Booking Confirmation"
        Height="450" 
        Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="White">

    <Grid>
        <!-- Main Grid Layout -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Confirmation Content -->
        <StackPanel Grid.Row="0" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center"
                    Margin="20">
            <!-- Success Icon (Checkmark) -->
            <Path Data="M0,14 L6,20 L18,8" 
                  Stroke="Green" 
                  StrokeThickness="4"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"
                  Stretch="Uniform"
                  Width="50"
                  Height="50"
                  Margin="0,0,0,20"/>

            <!-- Confirmation Message -->
            <TextBlock Text="Booking Successful!"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="Green"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>

            <TextBlock Text="Your parking spot has been successfully booked."
                       FontSize="18"
                       HorizontalAlignment="Center"
                       TextWrapping="Wrap"
                       Width="400"
                       TextAlignment="Center"/>
        </StackPanel>

        <!-- OK Button -->
        <Button Grid.Row="1"
                Content="OK"
                FontSize="16"
                FontWeight="Bold"
                Background="Green"
                Foreground="White"
                Padding="20,10"
                HorizontalAlignment="Center"
                Margin="0,20,0,20"
                Width="150"/>
    </Grid>
</Window>